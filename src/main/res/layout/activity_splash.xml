<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0c1022"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="My Custom Camera"
    android:textColor="#b500CCFF"
    android:textSize="28sp"
    android:textAlignment="center"
    android:layout_marginTop="20dp"
    android:typeface="monospace"
    android:fontFamily="@font/d"
    android:textStyle="bold"

/>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/camera2"

        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="40dp"
    android:text="Powered By An Awesome Developer"
    android:textStyle="bold"
    android:fontFamily="@font/d"
    android:textSize="26sp"
    android:textColor="#b500ccff"
    android:textAlignment="center"
    />

    <TextView
        android:id="@+id/hidtv"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Camera Permission Denied ,Exiting"
        android:textStyle="bold"
        android:fontFamily="@font/db"
        android:textSize="24sp"
        android:textColor="#b500ccff"
        android:textAlignment="center"


        />
</FrameLayout>